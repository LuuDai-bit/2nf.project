<?xml version="1.0" encoding='UTF-8' ?>
<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/404-page.html</pattern>
        <pattern>/api*</pattern>
        <pattern>/access-denied</pattern>
        <pattern>/ckfinder</pattern>
        <pattern>/add/*</pattern>
    </excludes>

    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>

    <decorator name = "add" page="add.jsp">
        <pattern>/add*</pattern>
    </decorator>

    <decorator name="client" page="web.jsp">
        <pattern>/*</pattern>
    </decorator>

    <decorator name = "login" page="login.jsp">
        <pattern>/dang-nhap</pattern>
    </decorator>


</decorators>